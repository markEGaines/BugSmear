<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - BugSMEAR - a Simple Method Ensures Appropriate Resolutions</title>
    <link href='http://fonts.googleapis.com/css?family=Open+Sans:400,300,600,400italic,700,800' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Raleway:300,200,100' rel='stylesheet' type='text/css'>


    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>

<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("BugSMEAR", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                @*<ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                </ul>*@
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div id="cl-wrapper" class="fixed-menu">
        <div class="cl-sidebar">
            <!-- Collapse Toggle -->
            <div class="cl-toggle"><i class="fa fa-reorder"></i></div>
            @if (this.User.Identity.IsAuthenticated)
            {
            <!-- Menu Items -->
                <div class="cl-navblock">
                    <ul class="cl-vnavigation">
                        <li>
                            <a href="/Home/Index"><i class="fa fa-home"></i><span>Home</span></a>
                        </li>
                        <li>
                            <a href="/Tickets/Index"><i class="fa fa-ticket"></i>Tickets</a>
                        </li>
                        <li>
                            <a href="/Projects/Index"><i class="fa fa-puzzle-piece"></i>Projects</a>
                        </li>
                        <li>
                            <a href="/Admin/Users"><i class="fa fa-user"></i>Users</a>
                            @*@Html.ActionLink("Users", "Users", "Admin")*@
                        </li>
                    </ul>
                </div>
            }
        </div>


        <div class="container-fluid">
            <div class="cl-mcont">
                <!-- Content goes here -->
                @RenderBody()
            </div>
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - BugSMEAR - a Simple Method Ensures Appropriate Resolutions</p>
            </footer>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/cleanzone")

    @RenderSection("scripts", required: false)
</body>
</html>
